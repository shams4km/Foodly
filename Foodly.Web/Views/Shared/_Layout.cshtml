<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>@(ViewData["Title"] ?? "Foodly")</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/app">Foodly</a>
    <div class="ms-auto">
      <a class="btn btn-outline-light me-2" href="/Identity/Account/Login">Login</a>
      <a class="btn btn-warning" href="/Identity/Account/Register">Sign up</a>
    </div>
  </div>
</nav>

<main class="container py-4">
  @RenderBody()
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)   <!-- ВАЖНО: рендерим секцию Scripts -->
</body>
</html>
