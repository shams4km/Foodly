@@model DishVm
<article class="dish">
  <div class="dish-img">
    <img src="~@Model.Img" alt="@Model.Title">
  </div>
  <div class="dish-row">
    <div class="dish-title">@Model.Title</div>
    <span class="chip">@Model.Badge</span>
  </div>
</article>

<style>
  .dish{background:#fff; border-radius:18px; box-shadow:var(--shadow-soft); overflow:hidden}
  .dish-img{height:170px}
  .dish-img img{width:100%; height:100%; object-fit:cover}
  .dish-row{display:flex; align-items:center; justify-content:space-between; padding:10px 12px}
  .dish-title{font-weight:700}
  .chip{background:var(--chip); color:var(--primary); border-radius:10px; padding:4px 8px; font-size:12px; font-weight:600}
</style>
