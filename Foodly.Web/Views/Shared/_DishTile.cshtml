@{ dynamic m = Model; }

<article class="dish" role="button" tabindex="0" aria-label="@m.Title">
  <div class="dish-pic">
    <img src="~@m.Img" alt="@m.Title" loading="lazy">
  </div>
  <div class="dish-body">
    <div class="dish-title">@m.Title</div>
    <div class="dish-row">
      <span class="i">⭐</span>@m.Rating
      <span class="sep">·</span>@m.Kind
      <span class="sep">·</span>@m.Price
      <span class="sep">·</span>@m.Time
    </div>
    <div class="dish-foot">
      <span class="badge @m.BadgeType">@m.Badge</span>
    </div>
  </div>
</article>

<style>
.dish{
  background:#fff;border-radius:18px;overflow:hidden;display:flex;flex-direction:column;
  box-shadow:0 12px 30px rgba(0,0,0,.08);transition:transform .25s, box-shadow .25s
}
.dish:hover{transform:translateY(-4px);box-shadow:0 14px 36px rgba(0,0,0,.1)}
.dish:focus{outline:2px solid #503E9D22;outline-offset:2px}

.dish-pic{height:212px;overflow:hidden}
.dish-pic img{width:100%;height:100%;object-fit:cover;transition:transform .35s}
.dish:hover .dish-pic img{transform:scale(1.05)}

.dish-body{padding:14px 16px}
.dish-title{font-weight:900;font-size:16px;margin-bottom:6px}
.dish-row{font-size:13px;color:#6b7280;display:flex;flex-wrap:wrap;gap:8px;align-items:center}
.dish-row .sep{opacity:.5}
.dish-foot{margin-top:10px}

/* badges */
.badge{padding:4px 10px;border-radius:8px;font-size:12px;font-weight:800}
.badge.free  {background:#ecebff;color:#503E9D}
.badge.promo {background:#fff0f0;color:#dc2626}
.badge.paid  {background:#fef3c7;color:#92400e}
</style>
