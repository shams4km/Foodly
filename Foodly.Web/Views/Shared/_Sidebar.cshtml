@{
    // Текущий маршрут — чтобы подсвечивать активный пункт
    var ctl = (ViewContext.RouteData.Values["controller"] as string ?? "").ToLower();
    var act = (ViewContext.RouteData.Values["action"] as string ?? "").ToLower();
    Func<string, bool> isActive = c => ctl == (c ?? "").ToLower();
}

<style>
  .sb-brand{display:flex;align-items:center;gap:10px;margin-bottom:16px}
  .sb-brand img{width:32px;height:32px;object-fit:contain}
  .sb-menu{display:flex;flex-direction:column;gap:10px}
  .sb-item{
    display:flex;align-items:center;gap:12px;
    padding:12px 14px;border-radius:14px;
    color:inherit;text-decoration:none;background:transparent;
    transition:background .15s, color .15s;
  }
  .sb-item:hover{background:#f1f2f6}
  .sb-item.active{background:#503E9D;color:#fff}
  .sb-ico{width:22px;height:22px;display:inline-block}
  .sb-ico svg{width:100%;height:100%}
  .sb-item.active .sb-ico svg{filter:brightness(100) saturate(0) invert(1)}
  .badge{
    margin-left:auto;font-size:11px;padding:2px 8px;border-radius:999px;
    background:#503E9D;color:#fff
  }
  .sb-item.active .badge{background:#fff;color:#503E9D}
</style>

<div class="sb-brand">
    <img src="~/img/logo.png" alt="logo">
    <strong>Nibble</strong>
</div>

<nav class="sb-menu">

    <!-- Home -->
    <a asp-controller="Home" asp-action="Index"
       class="sb-item @(isActive("home") ? "active" : "")">
        <span class="sb-ico">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M3 10.5 12 3l9 7.5v8a1.5 1.5 0 0 1-1.5 1.5H4.5A1.5 1.5 0 0 1 3 18.5v-8Z"
                    stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
              <path d="M9 21v-6h6v6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
            </svg>
        </span>
        <span>Home</span>
    </a>

    <!-- Explore -->
    <a asp-controller="Explore" asp-action="Index"
       class="sb-item @(isActive("explore") ? "active" : "")">
        <span class="sb-ico">
            <svg viewBox="0 0 24 24" fill="none">
              <rect x="3" y="3" width="8" height="8" rx="2" stroke="currentColor" stroke-width="1.6"/>
              <rect x="13" y="3" width="8" height="8" rx="2" stroke="currentColor" stroke-width="1.6"/>
              <rect x="3" y="13" width="8" height="8" rx="2" stroke="currentColor" stroke-width="1.6"/>
              <rect x="13" y="13" width="8" height="8" rx="2" stroke="currentColor" stroke-width="1.6"/>
            </svg>
        </span>
        <span>Explore</span>
    </a>

    <!-- Favourites -->
    <a asp-controller="Favourites" asp-action="Index"
       class="sb-item @(isActive("favourites") ? "active" : "")">
        <span class="sb-ico">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M6 3h12a1 1 0 0 1 1 1v17l-7-3-7 3V4a1 1 0 0 1 1-1Z"
                    stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
            </svg>
        </span>
        <span>Favourites</span>
    </a>

    <!-- Orders -->
    <a asp-controller="Orders" asp-action="Index"
       class="sb-item @(isActive("orders") ? "active" : "")">
        <span class="sb-ico">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M4 7h16M7 3h10a3 3 0 0 1 3 3v12a3 3 0 0 1-3 3H7a3 3 0 0 1-3-3V6a3 3 0 0 1 3-3Z"
                    stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
              <path d="M8 11h8M8 15h8" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
            </svg>
        </span>
        <span>Orders</span>
    </a>

    <!-- Messages (с бейджем) -->
    <a asp-controller="Messages" asp-action="Index"
       class="sb-item @(isActive("messages") ? "active" : "")">
        <span class="sb-ico">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M4 5h16a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H9l-5 4V6a1 1 0 0 1 1-1Z"
                    stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
            </svg>
        </span>
        <span>Messages</span>
        <span class="badge">2</span>
    </a>

    <!-- Settings -->
    <a asp-controller="Settings" asp-action="Index"
       class="sb-item @(isActive("settings") ? "active" : "")">
        <span class="sb-ico">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M12 15.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Z" stroke="currentColor" stroke-width="1.6"/>
              <path d="M19 12a7 7 0 0 0-.1-1.2l2.2-1.7-2-3.5-2.6 1A7.1 7.1 0 0 0 14 5l-.4-2.8h-3.2L10 5a7.1 7.1 0 0 0-2.5 1.6l-2.6-1-2 3.5L5 10.8a7 7 0 0 0 0 2.4l-2.2 1.7 2 3.5 2.6-1A7.1 7.1 0 0 0 10 19l.4 2.8h3.2L14 19a7.1 7.1 0 0 0 2.5-1.6l2.6 1 2-3.5-2.2-1.7c.1-.4.1-.8.1-1.2Z"
                    stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
            </svg>
        </span>
        <span>Settings</span>
    </a>

</nav>
