@model Foodly.Web.Controllers.SettingsVm
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Settings";

    // Берём первый план для показа
    var plan = Model.Plans.FirstOrDefault();
    var activeSub = Model.ActiveSubscription;

    var isActive = activeSub != null && plan != null && activeSub.PlanId == plan.Id && activeSub.IsActive;
}

@section Styles{
    <style>
        :root{
            --panel:#fff; --bg:#f5f6fb; --ink:#1f2430; --muted:#6b7280; --primary:#503E9D;
            --ok:#E7F7EC; --ok-ink:#1F8A4C; --warn:#ffe8e8; --warn-ink:#b42318; --chip:#eff1f6;
            --shadow:0 12px 26px rgba(0,0,0,.08); --radius:18px;
        }
        .section-title{font-weight:700;margin:18px 0 12px;font-size:22px}
        .card{background:var(--panel);border-radius:var(--radius);box-shadow:var(--shadow);padding:20px;margin-bottom:16px;}
        .hdr{display:flex;align-items:center;justify-content:space-between;margin-bottom:14px}
        .btn{border:0;border-radius:10px;padding:10px 18px;font-weight:600;cursor:pointer;transition:.2s}
        .btn-primary{background:var(--primary);color:#fff}
        .btn-danger{background:#d9534f;color:#fff}
        .status{margin-top:12px;font-size:14px;color:var(--muted)}
        .status.ok{color:var(--ok-ink)}
        .status.warn{color:var(--warn-ink)}
        .profile-panel{margin-bottom:20px;padding:16px;background:#fff;border-radius:18px;box-shadow:var(--shadow)}
    </style>
}

@section Top{
    @await Html.PartialAsync("_TopBar")
}

<h2 class="section-title">Account settings</h2>

<div class="profile-panel">
    <h3>Profile</h3>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <p>Hello, @User.Identity.Name!</p>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
    }
    else
    {
        <p>You are not logged in.</p>
        <a href="/auth/login" class="btn btn-primary">Login</a>
        <a href="/auth/register" class="btn btn-chip">Register</a>
    }
</div>

@if (plan != null)
{
    <div class="card">
        <div class="hdr">
            <div>
                <div style="font-weight:700;font-size:18px">@plan.Name - $@plan.PricePerMonth/month</div>
                <div class="status @(isActive ? "ok" : "warn")" id="subscription-status">
                    @(isActive ? "Active" : "Not active")
                </div>
            </div>
            <button id="toggle-btn" class="btn btn-primary">
                @(isActive ? "Deactivate" : "Activate")
            </button>
        </div>
        <p style="color:var(--muted);font-size:14px">
            @plan.Features
        </p>
    </div>
}

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $("#toggle-btn").on("click", function () {
            var planId = @plan?.Id ?? 0;

            $.ajax({
                url: "@Url.Action("ToggleSubscription", "Settings")",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify({ planId: planId }),
                success: function (res) {
                    if (res.ok) {
                        $("#subscription-status")
                            .text(res.active ? "Active" : "Not active")
                            .toggleClass("ok", res.active)
                            .toggleClass("warn", !res.active);

                        $("#toggle-btn").text(res.active ? "Deactivate" : "Activate");
                    } else {
                        alert("Something went wrong");
                    }
                },
                error: function () {
                    alert("Request failed");
                }
            });
        });
    </script>
}
