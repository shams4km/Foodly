@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Manage Users";
}

<h2>Registered Users</h2>

<!-- Кнопка выхода в стиле Settings -->
<div style="text-align: right; margin: 10px 0;">
    <a href="/auth/logout" class="btn btn-danger" style="text-decoration: none; padding: 6px 12px; border-radius: 10px; display: inline-block;">
        Logout
    </a>
</div>

@if (TempData["Error"] != null)
{
    <p style="color:red">@TempData["Error"]</p>
}

<table border="1" cellpadding="5" cellspacing="0" style="width:100%; margin-top:10px">
    <tr>
        <th>Email</th>
        <th>Username</th>
        <th>Actions</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>
                <form asp-action="DeleteUser" method="post">
                    <input type="hidden" name="id" value="@user.Id" />
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>